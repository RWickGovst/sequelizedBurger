{{!-- set up template that Handlebars can render onto --}}
{{!-- create a button to submit user input into database --}}
<div class="w3-row" id="images">
    <h3>Burgers!</h3>
    <div class="w3-half w3-container">
        <img src="https://nypdecider.files.wordpress.com/2014/10/bobs-burgers.png?w=1156&h=771&crop=1" alt="Burger"
            style="width:100%;height:auto;">
    </div>
    <div class="w3-half w3-container">
        <img src="https://thenypost.files.wordpress.com/2015/01/tv_burgers_family1a.jpg?quality=90&strip=all&w=1236&h=820&crop=1"
            alt="Burger" style="width:100%;height:auto;">
    </div>
</div>

<div class="w3-row">
    

    <div class="w3-third w3-container w3-green">
        <h4>Burgers on our menu:</h4>
        <ul>
            {{#each burgers_data}}
            {{#unless devoured}}
            <div>
                <p>{{this.burger_name}}
                    {{!-- </div> --}}
                    {{!-- <div> --}}
                    <button class="change-status" data-id="{{id}}" data-new="{{devoured}}">
                        Try!
                    </button>

                    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
                </p>
            </div>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="w3-third w3-container w3-blue">
        <h4>Devoured!</h4>
        <ul>
            {{#each burgers_data}}
            {{#if devoured}}
            <div>
                <button class="devour-burger" data-id="{{this.burger_name}}">{{this.burger_name}}</button>
                {{!-- <p>{{this.burger_name}}</p> --}}
            </div>
            {{/if}}
            {{/each}}
        </ul>
    </div>

    <div class="w3-third w3-container w3-green">
        <h4>Add a Burger</h4>
        <form class="create-form">

            <div class="form-group">
                <label for="burger">Burger Name:</label>
                <input type="text" id="burger" name="name">
            </div>

            <button type="submit">Add Burger</button>
        </form>
    </div>
</div>